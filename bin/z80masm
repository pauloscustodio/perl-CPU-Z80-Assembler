#!perl -w

use strict;

use CPU::Z80::Assembler;
$CPU::Z80::Assembler::verbose = 1;

my $infile = shift();
my $outfile = shift() || "$infile.o";
$/ = undef;

open(IN, $infile) || die("Can't open $infile\n");
open(OUT, ">$outfile") || die("Can't open $outfile\n");
print OUT z80asm(<IN>);
close(OUT);
close(IN);

=head1 blah

